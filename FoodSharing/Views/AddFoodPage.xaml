<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodSharing.Pages.AddFoodPage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="5" Spacing="10">
                <BoxView HeightRequest="10"/>
            <Label Text="Give away anything you would eat yourself:" TextColor="Black" FontSize="Medium" Margin="20,0,20,0"/>
            <Frame BackgroundColor="Transparent" HasShadow="False">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name="Name" Text="{Binding FoodName }" Placeholder="Naming of the product"   
                           PlaceholderColor="Black" HeightRequest="40"     
                           TextColor="Black" 
                           ClearButtonVisibility="WhileEditing">
                        <Entry.Keyboard>
                            <Keyboard x:FactoryMethod="Create">
                                <x:Arguments>
                                    <KeyboardFlags>Suggestions,CapitalizeWord</KeyboardFlags>
                                </x:Arguments>
                            </Keyboard>
                        </Entry.Keyboard>
                    </Entry>
                    <Entry x:Name="Details" Text="{Binding FoodDetails}" Placeholder="Details about the product"   
                           PlaceholderColor="Black" HeightRequest="40"   
                           TextColor="Black"
                           ClearButtonVisibility="WhileEditing">
                        <Entry.Keyboard>
                            <Keyboard x:FactoryMethod="Create">
                                <x:Arguments>
                                    <KeyboardFlags>Suggestions,CapitalizeWord</KeyboardFlags>
                                </x:Arguments>
                            </Keyboard>
                        </Entry.Keyboard>
                    </Entry>
                    <RadioButton Content="FromStore" GroupName="Type">
                    </RadioButton>
                    <RadioButton Content="HomeMade" GroupName="Type">
                    </RadioButton>
                    <Button Command="{Binding TakePicCommand}" Margin="10,10,120,0" Text="Take a picture! 📸" FontAttributes="Bold" FontSize="Large" BackgroundColor="White" BorderColor="Black" BorderWidth="2" CornerRadius="8" Opacity="0.70"/>
                    <Image  HorizontalOptions="Center" HeightRequest="170" Source="{Binding TakePhoto}"/>
                </StackLayout>
            </Frame>
            <Button Command="{Binding CreateProductCommand}" Text="Create" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"  
                    Grid.Column="0" Grid.Row="5" BackgroundColor="Black"  CornerRadius="8" Opacity="0.70"/>
            <Button Command="{Binding HomeCommand}" Text="Cancel" TextColor="Black"  
                    FontAttributes="Bold" FontSize="Large" VerticalOptions="Start" Margin="20,0,20,0"
                    Grid.Column="0" Grid.Row="6" BackgroundColor="White" BorderColor="Black" BorderWidth="2" CornerRadius="8" Opacity="0.70"/>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>