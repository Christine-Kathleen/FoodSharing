<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodSharing.Pages.CreateUserPage"
             BackgroundColor="#ADDDCE"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <BoxView HeightRequest="10"/>
            <Frame BackgroundColor="#70AE98" HasShadow="False">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name="FirstName" Text="{Binding FirstName}" Placeholder="First Name"   
                           PlaceholderColor="White" HeightRequest="40"     
                           TextColor="White"
                           ClearButtonVisibility="WhileEditing">
                             <Entry.Keyboard>
                                 <Keyboard x:FactoryMethod="Create">
                                     <x:Arguments>
                                         <KeyboardFlags>Suggestions,CapitalizeWord</KeyboardFlags>
                                      </x:Arguments>
                                </Keyboard>
                            </Entry.Keyboard>
                        </Entry>
                           <Entry x:Name="LastName" Text="{Binding LastName}" Placeholder=" Last Name"   
                           PlaceholderColor="White" HeightRequest="40"   
                           TextColor="White"
                           ClearButtonVisibility="WhileEditing">
                           <Entry.Keyboard>
                                 <Keyboard x:FactoryMethod="Create">
                                     <x:Arguments>
                                         <KeyboardFlags>Suggestions,CapitalizeWord</KeyboardFlags>
                                     </x:Arguments>
                                 </Keyboard>
                            </Entry.Keyboard>
                            </Entry>
                    <Entry x:Name="Telephone" Text="{Binding Telephone}" Placeholder="Telephone"   
                           PlaceholderColor="White" HeightRequest="40"   
                           Keyboard="Telephone"  
                           TextColor="White"
                           ClearButtonVisibility="WhileEditing"/>
                    <Entry x:Name="UserName" Text="{Binding UserName}" Placeholder="User Name"   
                           PlaceholderColor="White" HeightRequest="40"   
                           Keyboard="Text"  
                           TextColor="White"
                           ClearButtonVisibility="WhileEditing"/>
                    <Entry x:Name="Email" Text="{Binding Email}" Placeholder="Email"   
                           PlaceholderColor="White" HeightRequest="40"   
                           Keyboard="Email"  
                           TextColor="White"
                           ClearButtonVisibility="WhileEditing"/>
                    <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Password"   
                           PlaceholderColor="White" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="White"
                           ClearButtonVisibility="WhileEditing"/>
                    <Entry x:Name="reenterPassword" Text="{Binding Password}" Placeholder="Reenter Password"   
                           PlaceholderColor="White" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="White"
                           ClearButtonVisibility="WhileEditing"/>
                </StackLayout>
            </Frame>
            <Button Command="{Binding RegisterCommand}" Text="Create" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#CA7E8D"  CornerRadius="8" Opacity="0.70" />
            <Button Command="{Binding ChangeToSignIn}" Text="Sign in now" FontAttributes="Bold" FontSize="Large" BackgroundColor="#CA7E8D" TextColor="White" CornerRadius="8" Opacity="0.70"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>