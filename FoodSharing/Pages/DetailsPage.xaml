<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodSharing.Pages.DetailsPage"
             Title="Detail Page">
    <ContentPage.Content>
        <StackLayout>
        <Frame BackgroundColor="#ba0965" Padding="24" CornerRadius="0">
            <Label Text="Food Sharing" HorizontalTextAlignment="Center" TextColor="#ff8d03" FontSize="36"/>
        </Frame>
        <Label Text="Welcome! You are logged in as:" FontSize="Title" Padding="30,10,30,10" HorizontalTextAlignment="Center" TextColor="White"/>
        <Label Text="{Binding UserName}" FontSize="25" Padding="30,0,30,0" HorizontalTextAlignment="Center" TextColor="White"/>
        <StackLayout Orientation="Vertical" Padding="20" Spacing="30">
            <BoxView HeightRequest="10"/>
            
        </StackLayout>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>